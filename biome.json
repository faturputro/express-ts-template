{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"indentWidth": 2,
			"semicolons": "always",
			"quoteStyle": "single",
			"trailingComma": "all",
			"lineWidth": 150
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "warn"
			},
			"suspicious": {
				"noConfusingVoidType": "off"
			},
			"complexity": {
				"noStaticOnlyClass": "off"
			}
		}
	}
}
